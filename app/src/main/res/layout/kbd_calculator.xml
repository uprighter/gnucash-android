<?xml version="1.0" encoding="utf-8"?>
<org.gnucash.android.inputmethodservice.CalculatorKeyboardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_keyboard"
    style="@style/CalculatorKeyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:padding="4dp"
    android:stretchColumns="*"
    android:visibility="gone"
    tools:ignore="HardcodedText"
    tools:layout_width="360dp"
    tools:visibility="visible">

    <TableRow>

        <Button
            android:id="@+id/key_clear"
            style="@style/CalculatorKeyboard.Key.Clear"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="AC" />

        <Button
            android:id="@+id/key_left_parenthesis"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="(" />

        <Button
            android:id="@+id/key_right_parenthesis"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text=")" />

        <Button
            android:id="@+id/key_divide"
            style="@style/CalculatorKeyboard.Key.Operator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="รท" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/key_7"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="7" />

        <Button
            android:id="@+id/key_8"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="8" />

        <Button
            android:id="@+id/key_9"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="9" />

        <Button
            android:id="@+id/key_multiply"
            style="@style/CalculatorKeyboard.Key.Operator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="ร" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/key_4"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="4" />

        <Button
            android:id="@+id/key_5"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="5" />

        <Button
            android:id="@+id/key_6"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="6" />

        <Button
            android:id="@+id/key_minus"
            style="@style/CalculatorKeyboard.Key.Operator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="@string/number_picker_minus_label" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/key_1"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="1" />

        <Button
            android:id="@+id/key_2"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="2" />

        <Button
            android:id="@+id/key_3"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="3" />

        <Button
            android:id="@+id/key_plus"
            style="@style/CalculatorKeyboard.Key.Operator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="+" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/key_0"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="0" />

        <Button
            android:id="@+id/key_decimal"
            style="@style/CalculatorKeyboard.Key.Digit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="@string/number_picker_seperator" />

        <ImageButton
            android:id="@+id/key_delete"
            style="@style/CalculatorKeyboard.Key.Delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:contentDescription="@string/number_delete"
            android:src="@drawable/ic_backspace_black" />

        <Button
            android:id="@+id/key_equals"
            style="@style/CalculatorKeyboard.Key.Action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kbd_key_height"
            android:text="=" />
    </TableRow>
</org.gnucash.android.inputmethodservice.CalculatorKeyboardView>

