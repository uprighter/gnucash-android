<resources>

    <style name="Theme.GnuCash" parent="Theme.AppCompat.DayNight">
        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorButtonNormal">@color/theme_accent</item>

        <!-- The rest of your attributes -->
        <!--        <item name="actionModeBackground">@color/action_mode_background</item>-->
        <!--        <item name="windowActionModeOverlay">true</item>-->
        <!--        <item name="actionMenuTextAppearance">@style/ActionMenuText</item>-->
        <item name="preferenceTheme">@style/Theme.GnuCash.Preference</item>
        <!--         <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->

        <item name="actionBarTheme">@style/Theme.GnuCash.Toolbar</item>
        <item name="toolbarStyle">@style/Widget.GnuCash.Toolbar</item>
    </style>

    <style name="Theme.GnuCash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="UserVoiceTheme" parent="Theme.GnuCash">
        <!-- theme customizations -->
    </style>

    <style name="Theme.GnuCash.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="Theme.GnuCash.Preference" parent="PreferenceThemeOverlay" />

    <style name="Theme.GnuCash.TabLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GnuCash.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>